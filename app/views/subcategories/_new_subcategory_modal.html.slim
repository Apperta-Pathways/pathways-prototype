.modal.fade id="new-subcategory-modal" tabindex='-1' aria-labelledby='newSubcategoryModal' aria-hidden='true'
  .modal-dialog
    = form_for category_subcategories_path(@category), method: 'POST', html: { class: 'modal-content' } do |f|
      .modal-header
        button.close data-dismiss='modal' aria-label='Close'
          span aria-hidden='true'
        h4.modal-title == "Create a new subcategory under category <i>#{@active_cat.name}</i>"
      .modal-body
        = f.label :name
        = f.text_field :name, class: 'form-control'
      .modal-footer
        = f.submit 'Create', class: 'btn-primary btn form-control'

.bluebar
  h2.text-center = "Editing for #{@category.name}"
.container.data_module_container
  = form_for @data_module, method: 'POST' do |f|
    .row
      .col-md-6.col-md-offset-3
        .form-group
          = label_tag 'subcategories', 'Which subcategory?'
          = subcategory_input f
        .form-group
          = title_input f
    .row
      .pull-left
        a.btn.btn-default target='_blank' href='/images' = icon 'external-link', "Upload or fetch images"
      .pull-right
        button.btn.btn-default data-toggle='modal' data-target='#update_module' Update module
    .editor-container
      = quill_editor nil, { name: 'data_module[data]', value: @data_module.data }
= render partial: 'data_module_update'